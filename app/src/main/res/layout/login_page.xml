<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82B2DB">

    <EditText
        android:id="@+id/enterEmailLogin"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:background="@drawable/edit_shape"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="20dp"
        android:drawableTint="@color/cardview_dark_background"
        android:hint="Email"
        android:padding="20dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginDescription"
        app:layout_constraintVertical_bias="0.122" />

    <EditText
        android:id="@+id/enterPasswordLogin"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_shape"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="20dp"
        android:drawableTint="@color/cardview_dark_background"
        android:hint="Password"
        android:padding="20dp"
        android:inputType="textPassword"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterEmailLogin"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/login_Button"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:backgroundTint="#0F8BE1"
        android:gravity="center"
        android:text="Login"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterPasswordLogin"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/dontHaveAnAccount_Text"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:gravity="center"
        android:text="Don't have an account?"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/signUp_Button_Textview"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_Button"
        app:layout_constraintVertical_bias="0.084" />

    <TextView
        android:id="@+id/signUp_Button_Textview"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="44dp"
        android:gravity="center"
        android:text="Signup"
        android:textColor="#0F8BE1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_Button"
        app:layout_constraintVertical_bias="0.084" />

    <TextView
        android:id="@+id/loginDescription"
        android:layout_width="360dp"
        android:layout_height="71dp"
        android:gravity="center"
        android:text="Login"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162" />

</androidx.constraintlayout.widget.ConstraintLayout>
